<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FE">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Premium Header với Gradient Background -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_premium_header"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="48dp"
                android:paddingBottom="140dp">

                <!-- Top Navigation Bar -->
                <LinearLayout
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="32dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chào buổi tối"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:alpha="0.85" />

                        <TextView
                            android:id="@+id/tvGreeting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phạm Hữu Tiến"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="4dp"
                            android:letterSpacing="0.01" />
                    </LinearLayout>

                    <!-- Notification Bell -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:backgroundTint="#40FFFFFF">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_popup_reminder"
                            app:tint="#FFFFFF" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Premium Avatar -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="4dp"
                        app:strokeWidth="0dp"
                        app:strokeColor="#FFFFFF">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_avatar"
                            android:padding="10dp"
                            android:src="@android:drawable/ic_menu_manage"
                            app:tint="#FFFFFF" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Date Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/dateBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/topBar"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#30FFFFFF">

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📅 Thứ Năm, 18/09/2025"
                        android:textSize="13sp"
                        android:textColor="#FFFFFF"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:alpha="0.95" />
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>

            <!-- Main Content Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-120dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <!-- Glassmorphism Balance Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_glass_card"
                        android:padding="28dp">

                        <!-- Balance Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="10dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="4dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/gradient_accent"
                                    android:layout_marginEnd="10dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tổng số dư"
                                    android:textColor="#4A5568"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:letterSpacing="0.03" />
                            </LinearLayout>

                            <!-- Eye Icon -->
                            <ImageView
                                android:id="@+id/ivToggleBalance"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_view"
                                app:tint="#718096"
                                android:alpha="0.7" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1.650.000"
                                android:textSize="42sp"
                                android:textStyle="bold"
                                android:textColor="#1A202C"
                                android:fontFamily="sans-serif-condensed"
                                android:letterSpacing="-0.0" />

                            <TextView
                                android:id="@+id/tvCurrency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VNĐ"
                                android:textSize="16sp"
                                android:textColor="#718096"
                                android:textStyle="bold"
                                android:layout_marginStart="6dp"
                                android:layout_gravity="top"
                                android:letterSpacing="0.15" />
                        </LinearLayout>

                        <!-- Stats Row với Modern Icons -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_stats_container"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <!-- Income -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    android:backgroundTint="#ffffff"
                                    app:strokeWidth="0dp">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        />
<!--                                    android:src="@drawable/ic_incomev"-->

                                </com.google.android.material.card.MaterialCardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Thu nhập"
                                        android:textSize="12sp"
                                        android:textColor="#718096"
                                        android:letterSpacing="0.02"/>

                                    <TextView
                                        android:id="@+id/tvIncome"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2.0M"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="#10B981"
                                        android:layout_marginTop="2dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Vertical Divider -->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="40dp"
                                android:background="#E2E8F0"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"/>

                            <!-- Expense -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    android:backgroundTint="#ffffff"
                                    app:strokeWidth="0dp">

                                    <ImageView
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_gravity="center"
                                        />
<!--                                    android:src="@drawable/spending"-->

                                </com.google.android.material.card.MaterialCardView>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginStart="12dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Chi tiêu"
                                        android:textSize="12sp"
                                        android:textColor="#718096"
                                        android:letterSpacing="0.02" />

                                    <TextView
                                        android:id="@+id/tvExpense"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="350K"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:textColor="#EF4444"
                                        android:layout_marginTop="2dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Quick Actions Grid - Modern Style -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="1"
                    android:layout_marginBottom="24dp">

                    <!-- Add Income -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:background="@drawable/bg_period_selector">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp"
                                android:background="@drawable/bg_period_selector"
                                android:backgroundTint="#DCFCE7">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@android:drawable/arrow_down_float"
                                    android:rotation="180"
                                    app:tint="#10B981" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thu"
                                android:textSize="11sp"
                                android:textColor="#64748B"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Add Expense -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:backgroundTint="#FfFfFf">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp"
                                android:background="@drawable/bg_period_selector">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@android:drawable/arrow_up_float"
                                    app:tint="#EF4444" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chi"
                                android:textSize="11sp"
                                android:textColor="#64748B"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Reports -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:background="@drawable/bg_period_selector"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp"
                                android:background="@drawable/bg_period_selector"
                                android:backgroundTint="#DBEAFE">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@android:drawable/ic_menu_report_image"
                                    app:tint="#3B82F6" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Báo cáo"
                                android:textSize="11sp"
                                android:textColor="#64748B"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- More -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="0dp"
                        android:background="@drawable/bg_period_selector"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="0dp"
                                app:strokeWidth="0dp"
                                android:background="@drawable/bg_period_selector"
                                android:backgroundTint="#F3E8FF">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@android:drawable/ic_menu_more"
                                    app:tint="#9333EA" />
                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thêm"
                                android:textSize="11sp"
                                android:textColor="#64748B"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </GridLayout>

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giao dịch gần đây"
                        android:textSize="19sp"
                        android:textStyle="bold"
                        android:textColor="#1A202C"
                        android:letterSpacing="0.01"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="#EEF2FF">

                        <TextView
                            android:id="@+id/tvTransactionCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 giao dịch"
                            android:textSize="12sp"
                            android:textColor="#6366F1"
                            android:textStyle="bold"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Transactions List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTransactions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="100dp"
                    android:overScrollMode="never"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Premium Floating Action Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAddTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:text="Thêm giao dịch"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15sp"
        app:icon="@android:drawable/ic_input_add"
        app:iconTint="#FFFFFF"
        app:backgroundTint="#6366F1"
        app:elevation="8dp"
        app:cornerRadius="28dp"
        app:borderWidth="0dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>