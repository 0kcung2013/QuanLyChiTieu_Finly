<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_bottom_sheet">

    <!-- Handle Bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_handle_bar"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn màu chủ đạo"
        android:textSize="22sp"
        android:textColor="#1F2937"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tùy chỉnh giao diện theo phong cách của bạn"
        android:textSize="14sp"
        android:textColor="#6B7280"
        android:layout_marginBottom="24dp"/>

    <!-- Color Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2"
        android:layout_marginBottom="24dp">

        <!-- Orange -->
        <LinearLayout
            android:id="@+id/colorOrange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F59E0B"/>

                <ImageView
                    android:id="@+id/checkOrange"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"
                    android:visibility="gone"
                    app:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cam"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Green -->
        <LinearLayout
            android:id="@+id/colorGreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#10B981"/>

                <ImageView
                    android:id="@+id/checkGreen"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"
                    android:visibility="visible"
                    app:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xanh lá"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Blue -->
        <LinearLayout
            android:id="@+id/colorBlue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3B82F6"/>

                <ImageView
                    android:id="@+id/checkBlue"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"
                    android:visibility="gone"
                    app:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xanh dương"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Purple -->
        <LinearLayout
            android:id="@+id/colorPurple"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#8B5CF6"/>

                <ImageView
                    android:id="@+id/checkPurple"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"
                    android:visibility="gone"
                    app:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tím"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Red -->
        <LinearLayout
            android:id="@+id/colorRed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EF4444"/>

                <ImageView
                    android:id="@+id/checkRed"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"
                    android:visibility="gone"
                    app:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đỏ"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Pink -->
        <LinearLayout
            android:id="@+id/colorPink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EC4899"/>

                <ImageView
                    android:id="@+id/checkPink"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"
                    android:visibility="gone"
                    app:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hồng"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Teal -->
        <LinearLayout
            android:id="@+id/colorTeal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#14B8A6"/>

                <ImageView
                    android:id="@+id/checkTeal"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"
                    android:visibility="gone"
                    app:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xanh ngọc"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Indigo -->
        <LinearLayout
            android:id="@+id/colorIndigo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="4dp"
                android:foreground="?attr/selectableItemBackground">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#6366F1"/>

                <ImageView
                    android:id="@+id/checkIndigo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check"
                    android:visibility="gone"
                    app:tint="#FFFFFF"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chàm"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </GridLayout>

    <!-- Apply Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApplyColor"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Áp dụng màu"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:backgroundTint="#3B82F6"/>
</LinearLayout>
