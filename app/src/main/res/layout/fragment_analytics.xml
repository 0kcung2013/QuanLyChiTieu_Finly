<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xin chào!"
                    android:textSize="16sp"
                    android:textColor="#80FFFFFF"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tài chính hôm nay"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>


        </LinearLayout>

        <!-- Overview Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:weightSum="2">

            <!-- Income Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#E8F5E8">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_income_arrow"
                                app:tint="@null" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Thu nhập"
                            android:textSize="14sp"
                            android:textColor="@color/gray_6b7280"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="41.000.350 đ"
                        android:textSize="18sp"
                        android:textColor="@color/red_10B981"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="↗ +12.5% từ tháng trước"
                        android:textSize="12sp"
                        android:textColor="#10B981"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Expense Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FEE2E2">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_expense_arrow"
                                app:tint="@null" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Chi tiêu"
                            android:textSize="14sp"
                            android:textColor="#6B7280"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvExpense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28.351.000 đ"
                        android:textSize="18sp"
                        android:textColor="#EF4444"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="↗ +8.2% từ tháng trước"
                        android:textSize="12sp"
                        android:textColor="#EF4444"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Balance & Goal Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:weightSum="2">

            <!-- Balance Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số dư"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/tvBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12.649.350 đ"
                        android:textSize="16sp"
                        android:textColor="#3B82F6"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Goal Progress Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardGoalProgress"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mục tiêu tháng"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/tvGoalProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="68%"
                            android:textSize="12sp"
                            android:textColor="#F59E0B"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressGoal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:layout_marginTop="8dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="68"
                        android:progressDrawable="@drawable/custom_progress_bar"/>

                    <TextView
                        android:id="@+id/tvGoalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28M/41M đ"
                        android:textSize="11sp"
                        android:textColor="#9CA3AF"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Quick Stats Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thống kê nhanh"
                        android:textSize="18sp"
                        android:textColor="#1F2937"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_period_selector"
                        android:padding="3dp">

                        <TextView
                            android:id="@+id/btnDay"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text="Ngày"
                            android:textSize="12sp"
                            android:textColor="#3B82F6"
                            android:background="@drawable/bg_period_selected"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/btnMonth"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text="Tháng"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/btnYear"
                            android:layout_width="60dp"
                            android:layout_height="match_parent"
                            android:text="Năm"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:gravity="center"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Mini Chart Area -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/trendChart"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Quick Stats Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trung bình/ngày"
                            android:textSize="11sp"
                            android:textColor="#9CA3AF"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/tvAvgDaily"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="945K đ"
                            android:textSize="14sp"
                            android:textColor="#1F2937"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cao nhất"
                            android:textSize="11sp"
                            android:textColor="#9CA3AF"
                            android:textAlignment="center"/>

                        <TextView
                            android:id="@+id/tvHighest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.1M đ"
                            android:textSize="14sp"
                            android:textColor="#EF4444"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xu hướng"
                            android:textSize="11sp"
                            android:textColor="#9CA3AF"
                            android:textAlignment="center"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="4dp">

                            <TextView
                                android:id="@+id/tvTrendIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="↗"
                                android:textSize="14sp"
                                android:textColor="#EF4444"/>

                            <TextView
                                android:id="@+id/tvTrendPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8.2%"
                                android:textSize="14sp"
                                android:textColor="#EF4444"
                                android:textStyle="bold"
                                android:layout_marginStart="2dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Goal Management Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardGoalManagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FEF3C7">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_target"
                            app:tint="@null" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quản lý mục tiêu"
                            android:textSize="18sp"
                            android:textColor="#1F2937"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đặt và theo dõi mục tiêu chi tiêu"
                            android:textSize="12sp"
                            android:textColor="#6B7280"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar"
                        app:tint="@null" />
                </LinearLayout>

                <!-- Quick Goal Preview -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="@drawable/bg_goal_item">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày"
                            android:textSize="12sp"
                            android:textColor="#6B7280"/>

                        <TextView
                            android:id="@+id/tvDailyGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.5M đ"
                            android:textSize="14sp"
                            android:textColor="#1F2937"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/bg_goal_item">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tháng"
                            android:textSize="12sp"
                            android:textColor="#6B7280"/>

                        <TextView
                            android:id="@+id/tvMonthlyGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="41M đ"
                            android:textSize="14sp"
                            android:textColor="#1F2937"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="@drawable/bg_goal_item">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Năm"
                            android:textSize="12sp"
                            android:textColor="#6B7280"/>

                        <TextView
                            android:id="@+id/tvYearlyGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500M đ"
                            android:textSize="14sp"
                            android:textColor="#1F2937"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Expense Categories Chart -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phân tích chi tiêu"
                    android:textSize="18sp"
                    android:textColor="#1F2937"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Detailed List -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chi tiết các khoản"
                        android:textSize="18sp"
                        android:textColor="#1F2937"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:id="@+id/btnViewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem tất cả"
                        android:textSize="14sp"
                        android:textColor="#3B82F6"
                        android:fontFamily="sans-serif-medium"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Premium Floating Action Button -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabQuickAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="Thêm giao dịch"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconTint="#FFFFFF"
            app:backgroundTint="#6366F1"
            app:elevation="8dp"
            app:cornerRadius="28dp"
            app:borderWidth="0dp" />

    </LinearLayout>
</ScrollView>